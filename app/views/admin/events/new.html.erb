<!-- Bandeau d'alerte -->
    <% if @event.errors.any? %>
      <div class="alert alert-danger" role="alert">
        <p><small>Nous n'avons pas réussi à créer l'évennement pour la (ou les) raison(s) suivante(s) :</small></p>
        <ul><small>
          <% @event.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </small></ul>
      </div>
    <% end %>

<section class ="container mt-3">

<!-- Bandeau d'acceuil générique -->
  <div class=" p-1 mt-1 bg-secondary text-white">
      <div class="row text-center">
          <div class="col-9 text-left pl-5">
              <h3 class="section-title"> Formulaire de création d'un événnement </h3>
          </div>
      </div>
  </div>

<!-- Formulaire -->
<%= form_for [:admin, @event] do |f| %>
  <div class="form-group">
    <label> <%=f.label :title,"Titre" %> </label>
    <%=f.text_field :title, class:'form-control' %>
  </div>
  <div class="form-group">
    <label> <%=f.label :description,"Description" %> </label>
    <%=f.text_area :description, class:'form-control' %>
  </div>
  <div class="form-group">
    <label> <%=f.label :location,"Localisation" %> </label>
    <%=f.text_field :location, class:'form-control' %>
  </div>
  <div class="form-group">
    <label> <%=f.label :price,"Prix" %> </label>
    <%=f.text_field :price, class:'form-control' %>
  </div>
  <div class="form-group">
    <label> <%=f.label :duration,"Duration (min)" %> </label>
    <%=f.text_field :duration, class:'form-control' %>
  </div>
  <div class="form-group">
    <label> <%=f.label :start_date,"Date de démarrage" %> </label>
    <%=f.date_field :start_date, class:'form-control' %>
  </div>
  <div class="form-group">
    <button type="submit" class="btn btn-primary"> Créer l'événnement </button>
  </div>
<% end %>

</section>

