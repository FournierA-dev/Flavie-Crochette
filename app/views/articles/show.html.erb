
<section id="show-article", class="white-wrapper  ">
  <div class="section-inner-60 nopaddingbottom">
    <div class="container">
        <div class="row mb60 text-center">
            <div class="col-sm-12">
                <h3 class="section-title"><%= @article.name %></h3>
                <p class="section-sub-title"><%= @article.short_description %></p>
            </div>
        </div>
    </div>
    <div class="container pure-white-wrapper pt-5">
      <div class="row  ">  
        <div class=" col-sm-4  mx-auto ">
          <div class="w-100 mx-auto"
            <a href="#" class=" "><%= image_tag "mes_activites/IMG_20181022_164025_861.jpg", class: "img-responsive img-fluid " %></a>
          </div>
        </div>
        <div class="col-sm-8 box-body  ">
          <%= render 'components/notation' %>
        </div>
      </div>
      <div class="row post-list">
        <div class=" blog-caption mx-auto position-relative">     
            <h4 class="font-weight-bold"><%= @article.name %></h4>
            <p><%= @article.description %></p>                     
        </div>
      </div>
    </div>
  </div>
</section>

<div class="container pure-white-wrapper pb-5 ">
  <div class="card-deck ">
    <%if @article.price != 0%>
      <%= render partial: "components/priceCard", locals: {
            name: @article.name,
            type: @article.article_type.singularize,
            price: @article.price,
            sa: nil
      } %>
    <% end %>
    <%@article.sub_articles.each do |sa|%> 
      <%= render partial: "components/priceCard", locals: {
            name: @article.name,
            type: sa.sub_article_type.singularize,
            price: sa.price,
            sa: sa
      } %>
    <% end %>
  </div>
</div>

<%= render 'comments/index' %>



