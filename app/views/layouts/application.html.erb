<!DOCTYPE html>
<html>
  <head>
    <title>Flavie La f√©e Crochette</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta charset="UTF-8">
    <meta content="IE=edge" http-equiv="X-UA-Compatible">
    <meta content="width=device-width, initial-scale=1" name="viewport">
    <meta content="" name="Flavie Crochette">
    <link rel="icon" type="image/png" href="<%= asset_path("icons/favicon.png")%>"/>

    <%= stylesheet_link_tag 'application' %>
            <!-- SPECIFIC STYLESHEET BOUTIQUE -->
            <% if current_page?(articles_path) %>
              <%= stylesheet_link_tag 'nouislider.min' %>
            <% end %>

  </head>

  <body class="animsition">

    <%= render 'components/navbar' %>
    <br><br><br><br><br>
    <%= render 'components/alert' %>

    <%= yield %>

    <%= render 'components/footer' %>
    <%= render 'components/topButton' %>

    <!-- Container Selection -->
    <div id="dropDownSelect1"></div>
    <div id="dropDownSelect2"></div>

    <%= javascript_include_tag 'application' %>

            <!-- SPECIFIC JAVASCRIPT BOUTIQUE -->
            <% if current_page?(articles_path) %>
              <%= javascript_include_tag 'moment.min' %>
              <%= javascript_include_tag 'daterangepicker' %>
              <%= javascript_include_tag 'nouislider.min' %>
                <script type="text/javascript">
                  /*[ No ui ]
                    ===========================================================*/
                    var filterBar = document.getElementById('filter-bar');
                    noUiSlider.create(filterBar, {
                        start: [ 50, 200 ],
                        connect: true,
                        range: {
                            'min': 50,
                            'max': 200
                        }
                    });
                    var skipValues = [
                    document.getElementById('value-lower'),
                    document.getElementById('value-upper')
                    ];
                    filterBar.noUiSlider.on('update', function( values, handle ) {
                        skipValues[handle].innerHTML = Math.round(values[handle]) ;
                    });
                </script>
            <% end %>

            <!-- OTHERS SCRIPTS TO MOOVE -->
            <script type="text/javascript">
              $(".selection-1").select2({
                minimumResultsForSearch: 20,
                dropdownParent: $('#dropDownSelect1')
              });
            </script>

            <script type="text/javascript">
              $('.block2-btn-addcart').each(function(){
                var nameProduct = $(this).parent().parent().parent().find('.block2-name').html();
                $(this).on('click', function(){
                  swal(nameProduct, "is added to cart !", "success");
                });
              });

              $('.block2-btn-addwishlist').each(function(){
                var nameProduct = $(this).parent().parent().parent().find('.block2-name').html();
                $(this).on('click', function(){
                  swal(nameProduct, "is added to wishlist !", "success");
                });
              });
            </script>

            <script type="text/javascript">
                  $('.parallax100').parallax100();
            </script>

  </body>
</html>
